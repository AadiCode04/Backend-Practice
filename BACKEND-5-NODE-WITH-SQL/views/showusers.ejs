<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All users</title>
    <style>
        table,
        td,
        tr {
            border: 2px solid black;
        }
    </style>
</head>

<body>
    <table>
        <tr>
            <th>id</th>
            <th>email</th>
            <th>username</th>

        </tr>
        <% for ( user of users){ %>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.email%>
                </td>
                <td>
                    <%= user.username%>
                </td>
                <td>
                    
                    <form action="/user/<%=user.id%>/edit" method="get">
                        <button>Edit username</button>
                    </form>
                </td>
            </tr>
            <% } %>
         </table>
</body>

</html>

